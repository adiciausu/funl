{lager, [
    {log_root, "log/"},
    {handlers, [
        {lager_console_backend, info},
        {lager_file_backend, [{file, "warning.log"}, {level, error}]},
        {lager_file_backend, [{file, "error.log"}, {level, error}]},
        {lager_file_backend, [{file, "info.log"}, {level, info}]}
    ]}
]}.